# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace=true

[*.json]
indent_style = space
tab_width = 4

[*.yml]
indent_style = space
tab_width = 4


[*.md]
indent_style = tab
tab_width = 4

